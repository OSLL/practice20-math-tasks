<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Настройки игры"
        android:gravity = "center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:textColor = "#FFFFFF"
        android:textSize = "45sp" />

    <Button
        android:id="@+id/exit"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:text="В меню"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gameButton"/>

    <Button
        android:id="@+id/gameButton"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:background="#30A4FF"
        android:text="Играть"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exit" />

    <RadioGroup
        android:id ="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:paddingEnd="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите сложность игры:"
            android:textColor="#000000"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/radioEasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Легкий"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Средний"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/radioHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тяжёлый"
            android:textColor="#000000"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/gameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:paddingEnd="66sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите режим игры:"
            android:textColor="#000000"
            android:textSize="17sp"/>

        <RadioButton
            android:id="@+id/modeOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расставление цифр"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/modeTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расставление знаков"
            android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/modeThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Комбинированный"
            android:textColor="#000000"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>